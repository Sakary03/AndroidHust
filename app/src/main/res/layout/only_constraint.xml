<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="188dp"
        android:textSize="100dp"
        android:text="0"
        android:gravity="right"
        android:background="#DEDEDE"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
    <Button
        app:cornerRadius="0dp"
        android:textColor="@color/black"
        android:layout_margin="2dp"
        android:id="@+id/ce"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="CE"
        android:textSize="30dp"
        android:backgroundTint="#DEDEDE"
        app:layout_constraintTop_toBottomOf="@id/textView"
        app:layout_constraintBottom_toTopOf="@id/seven"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/c"
        app:layout_constraintHorizontalWeight="1"
        app:layout_constraintVertical_weight="1" />

    <Button
        android:layout_margin="2dp"
        app:cornerRadius="0dp"
        android:textColor="@color/black"
        android:id="@+id/c"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="C"
        android:textSize="30dp"
        android:backgroundTint="#DEDEDE"
        app:layout_constraintTop_toBottomOf="@id/textView"
        app:layout_constraintBottom_toTopOf="@id/seven"
        app:layout_constraintStart_toEndOf="@id/ce"
        app:layout_constraintEnd_toStartOf="@id/bs"
        app:layout_constraintHorizontalWeight="1"
        app:layout_constraintVertical_weight="1" />

    <Button
        android:layout_margin="2dp"
        app:cornerRadius="0dp"
        android:textColor="@color/black"
        android:id="@+id/bs"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="BS"
        android:textSize="30dp"
        android:backgroundTint="#DEDEDE"
        app:layout_constraintTop_toBottomOf="@id/textView"
        app:layout_constraintBottom_toTopOf="@id/seven"
        app:layout_constraintStart_toEndOf="@id/c"
        app:layout_constraintEnd_toStartOf="@id/div"
        app:layout_constraintHorizontalWeight="1"
        app:layout_constraintVertical_weight="1" />

    <Button
        android:layout_margin="2dp"
        app:cornerRadius="0dp"
        android:textColor="@color/black"
        android:id="@+id/div"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="/"
        android:textSize="30dp"
        android:backgroundTint="#DEDEDE"
        app:layout_constraintTop_toBottomOf="@id/textView"
        app:layout_constraintBottom_toTopOf="@id/seven"
        app:layout_constraintStart_toEndOf="@id/bs"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontalWeight="1"
        app:layout_constraintVertical_weight="1" />

    <Button
        android:layout_margin="2dp"
        app:cornerRadius="0dp"
        android:textColor="@color/black"
        android:id="@+id/seven"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="7"
        android:textSize="30dp"
        android:backgroundTint="#EFEFEF"
        app:layout_constraintTop_toBottomOf="@id/ce"
        app:layout_constraintBottom_toTopOf="@id/four"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/eight"
        app:layout_constraintHorizontalWeight="1"
        app:layout_constraintVertical_weight="1" />

    <Button
        android:layout_margin="2dp"
        app:cornerRadius="0dp"
        android:textColor="@color/black"
        android:id="@+id/eight"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="8"
        android:textSize="30dp"
        android:backgroundTint="#EFEFEF"
        app:layout_constraintTop_toBottomOf="@id/c"
        app:layout_constraintBottom_toTopOf="@id/four"
        app:layout_constraintStart_toEndOf="@id/seven"
        app:layout_constraintEnd_toStartOf="@id/nine"
        app:layout_constraintHorizontalWeight="1"
        app:layout_constraintVertical_weight="1" />

    <Button
        android:layout_margin="2dp"
        app:cornerRadius="0dp"
        android:textColor="@color/black"
        android:id="@+id/nine"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="9"
        android:textSize="30dp"
        android:backgroundTint="#EFEFEF"
        app:layout_constraintTop_toBottomOf="@id/bs"
        app:layout_constraintBottom_toTopOf="@id/four"
        app:layout_constraintStart_toEndOf="@id/eight"
        app:layout_constraintEnd_toStartOf="@id/mul"
        app:layout_constraintHorizontalWeight="1"
        app:layout_constraintVertical_weight="1" />

    <Button
        android:layout_margin="2dp"
        app:cornerRadius="0dp"
        android:textColor="@color/black"
        android:id="@+id/mul"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="X"
        android:textSize="30dp"
        android:backgroundTint="#DEDEDE"
        app:layout_constraintTop_toBottomOf="@id/div"
        app:layout_constraintBottom_toTopOf="@id/four"
        app:layout_constraintStart_toEndOf="@id/nine"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontalWeight="1"
        app:layout_constraintVertical_weight="1" />

    <Button
        android:layout_margin="2dp"
        app:cornerRadius="0dp"
        android:textColor="@color/black"
        android:id="@+id/four"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="4"
        android:textSize="30dp"
        android:backgroundTint="#EFEFEF"
        app:layout_constraintTop_toBottomOf="@id/seven"
        app:layout_constraintBottom_toTopOf="@id/one"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/five"
        app:layout_constraintHorizontalWeight="1"
        app:layout_constraintVertical_weight="1" />

    <Button
        android:layout_margin="2dp"
        app:cornerRadius="0dp"
        android:textColor="@color/black"
        android:id="@+id/five"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="5"
        android:textSize="30dp"
        android:backgroundTint="#EFEFEF"
        app:layout_constraintTop_toBottomOf="@id/eight"
        app:layout_constraintBottom_toTopOf="@id/one"
        app:layout_constraintStart_toEndOf="@id/four"
        app:layout_constraintEnd_toStartOf="@id/six"
        app:layout_constraintHorizontalWeight="1"
        app:layout_constraintVertical_weight="1" />

    <Button
        android:layout_margin="2dp"
        app:cornerRadius="0dp"
        android:textColor="@color/black"
        android:id="@+id/six"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="6"
        android:textSize="30dp"
        android:backgroundTint="#EFEFEF"
        app:layout_constraintTop_toBottomOf="@id/nine"
        app:layout_constraintBottom_toTopOf="@id/one"
        app:layout_constraintStart_toEndOf="@id/five"
        app:layout_constraintEnd_toStartOf="@id/sub"
        app:layout_constraintHorizontalWeight="1"
        app:layout_constraintVertical_weight="1" />

    <Button
        android:layout_margin="2dp"
        app:cornerRadius="0dp"
        android:textColor="@color/black"
        android:id="@+id/sub"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="-"
        android:textSize="30dp"
        android:backgroundTint="#DEDEDE"
        app:layout_constraintTop_toBottomOf="@id/mul"
        app:layout_constraintBottom_toTopOf="@id/one"
        app:layout_constraintStart_toEndOf="@id/six"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontalWeight="1"
        app:layout_constraintVertical_weight="1" />

    <Button
        android:layout_margin="2dp"
        app:cornerRadius="0dp"
        android:textColor="@color/black"
        android:id="@+id/one"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="1"
        android:textSize="30dp"
        android:backgroundTint="#EFEFEF"
        app:layout_constraintTop_toBottomOf="@id/four"
        app:layout_constraintBottom_toTopOf="@id/addOrSub"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/two"
        app:layout_constraintHorizontalWeight="1"
        app:layout_constraintVertical_weight="1" />

    <Button
        android:layout_margin="2dp"
        app:cornerRadius="0dp"
        android:textColor="@color/black"
        android:id="@+id/two"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="2"
        android:textSize="30dp"
        android:backgroundTint="#EFEFEF"
        app:layout_constraintTop_toBottomOf="@id/five"
        app:layout_constraintBottom_toTopOf="@id/addOrSub"
        app:layout_constraintStart_toEndOf="@id/one"
        app:layout_constraintEnd_toStartOf="@id/three"
        app:layout_constraintHorizontalWeight="1"
        app:layout_constraintVertical_weight="1" />

    <Button
        android:layout_margin="2dp"
        app:cornerRadius="0dp"
        android:textColor="@color/black"
        android:id="@+id/three"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="3"
        android:textSize="30dp"
        android:backgroundTint="#EFEFEF"
        app:layout_constraintTop_toBottomOf="@id/six"
        app:layout_constraintBottom_toTopOf="@id/addOrSub"
        app:layout_constraintStart_toEndOf="@id/two"
        app:layout_constraintEnd_toStartOf="@id/add"
        app:layout_constraintHorizontalWeight="1"
        app:layout_constraintVertical_weight="1" />

    <Button
        android:layout_margin="2dp"
        app:cornerRadius="0dp"
        android:textColor="@color/black"
        android:id="@+id/add"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="+"
        android:textSize="30dp"
        android:backgroundTint="#DEDEDE"
        app:layout_constraintTop_toBottomOf="@id/sub"
        app:layout_constraintBottom_toTopOf="@id/addOrSub"
        app:layout_constraintStart_toEndOf="@id/three"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontalWeight="1"
        app:layout_constraintVertical_weight="1" />
    <Button
        android:layout_margin="2dp"
        app:cornerRadius="0dp"
        android:textColor="@color/black"
        android:id="@+id/addOrSub"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="+/-"
        android:textSize="30dp"
        android:backgroundTint="#DEDEDE"
        app:layout_constraintTop_toBottomOf="@id/one"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/zero"
        app:layout_constraintHorizontalWeight="1"
        app:layout_constraintVertical_weight="1" />

    <Button
        android:layout_margin="2dp"
        app:cornerRadius="0dp"
        android:textColor="@color/black"
        android:id="@+id/zero"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="0"
        android:textSize="30dp"
        android:backgroundTint="#EFEFEF"
        app:layout_constraintTop_toBottomOf="@id/two"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/addOrSub"
        app:layout_constraintEnd_toStartOf="@id/comma"
        app:layout_constraintHorizontalWeight="1"
        app:layout_constraintVertical_weight="1" />

    <Button
        android:layout_margin="2dp"
        app:cornerRadius="0dp"
        android:textColor="@color/black"
        android:id="@+id/comma"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="."
        android:textSize="30dp"
        android:backgroundTint="#DEDEDE"
        app:layout_constraintTop_toBottomOf="@id/three"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/zero"
        app:layout_constraintEnd_toStartOf="@id/calc"
        app:layout_constraintHorizontalWeight="1"
        app:layout_constraintVertical_weight="1" />

    <Button
        android:layout_margin="2dp"
        app:cornerRadius="0dp"
        android:textColor="@color/black"
        android:id="@+id/calc"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="="
        android:textSize="30dp"
        android:backgroundTint="#DEDEDE"
        app:layout_constraintTop_toBottomOf="@id/add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/comma"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontalWeight="1"
        app:layout_constraintVertical_weight="1" />
</androidx.constraintlayout.widget.ConstraintLayout>
